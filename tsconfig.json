{
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "preserveWatchOutput": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,

    "composite": true,
    "incremental": true,
    "declaration": true,

    "module": "commonjs",
    "target": "es2020",
    "lib": ["esnext"],
    "moduleResolution": "node",

    "baseUrl": ".",

    "rootDirs": [
      ".",

      "./services",
      "./bazel-out/darwin-fastbuild/bin/services",
      "./bazel-out/k8-fastbuild/bin/services",
      "./bazel-out/x64_windows-fastbuild/bin/services",
      "./bazel-out/darwin-dbg/bin/services",
      "./bazel-out/k8-dbg/bin/services",
      "./bazel-out/x64_windows-dbg/bin/services",

      "./common",
      "./bazel-out/darwin-fastbuild/bin/common",
      "./bazel-out/k8-fastbuild/bin/common",
      "./bazel-out/x64_windows-fastbuild/bin/common",
      "./bazel-out/darwin-dbg/bin/common",
      "./bazel-out/k8-dbg/bin/common",
      "./bazel-out/x64_windows-dbg/bin/common",

      "./core",
      "./bazel-out/darwin-fastbuild/bin/core",
      "./bazel-out/k8-fastbuild/bin/core",
      "./bazel-out/x64_windows-fastbuild/bin/core",
      "./bazel-out/darwin-dbg/bin/core",
      "./bazel-out/k8-dbg/bin/core",
      "./bazel-out/x64_windows-dbg/bin/core",

      "./network",
      "./bazel-out/darwin-fastbuild/bin/network",
      "./bazel-out/k8-fastbuild/bin/network",
      "./bazel-out/x64_windows-fastbuild/bin/network",
      "./bazel-out/darwin-dbg/bin/network",
      "./bazel-out/k8-dbg/bin/network",
      "./bazel-out/x64_windows-dbg/bin/network",

      "./libs",
      "./bazel-out/darwin-fastbuild/bin/libs",
      "./bazel-out/k8-fastbuild/bin/libs",
      "./bazel-out/x64_windows-fastbuild/bin/libs",
      "./bazel-out/darwin-dbg/bin/libs",
      "./bazel-out/k8-dbg/bin/libs",
      "./bazel-out/x64_windows-dbg/bin/libs"
    ],

    "paths": {
      "@common/*": ["./common/*"],
      "@core/*": ["./core/*"],
      "@network/*": ["./network/*"],
      "@libs/*": ["./libs/*"]
    }
  },
  "exclude": [
    "bazel-stratis3",
    "bazel-out",
    "external",
    "bazel-testlogs",
    "node_modules"
  ]
}
