{
  "name": "wexond-cloud",
  "private": true,
  "scripts": {
    "dev:feedback": "lerna exec yarn dev --parallel --scope=@backend/{common,feedback}",
    "dev:waitlist": "lerna exec yarn dev --parallel --scope=@backend/waitlist",
    "dev:updates": "lerna exec yarn dev --parallel --scope=@backend/{common,updates}",
    "watch:feedback": "lerna exec yarn watch --scope=@backend/feedback",
    "watch:waitlist": "lerna exec yarn watch --scope=@backend/waitlist",
    "watch:updates": "lerna exec yarn watch --scope=@backend/updates",
    "build:feedback": "lerna exec yarn build --scope=@backend/{common,feedback}",
    "build:updates": "lerna exec yarn build --scope=@backend/{common,updates}",
    "build:website": "lerna exec yarn build --scope=@web/website",
    "analyze": "lerna run --stream --parallel analyze",
    "clean": "rimraf ./backend/**/build && rimraf ./frontend/**/build",
    "deps": "npx lerna link",
    "ci-build": "ts-node -T scripts/ci-build.ts",
    "lint": "eslint \"./{backend,frontend}/**/*/*.{ts,tsx}\"",
    "lint-fix": "npm run lint -- --fix",
    "test": "lerna run --stream --parallel test"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@typescript-eslint/eslint-plugin": "^4.21.0",
    "@typescript-eslint/parser": "^4.21.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^7.0.0",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.23.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "execa": "^5.1.1",
    "lerna": "^3.22.1",
    "nodemon": "^2.0.12",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^8.0.11",
    "ts-node": "^10.2.1",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "dotenv": "^10.0.0"
  },
  "workspaces": [
    "backend/*",
    "frontend/*"
  ]
}
